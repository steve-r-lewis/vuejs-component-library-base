{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "src/**/*.ts*",
    "src/**/*.vue*",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
  ],
  "compilerOptions": {
    "jsxImportSource": "vue",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "types": ["node"],
    "sourceMap": true
  }
}
